#
# Unity editor configuration
#

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
max_line_length = 100
tab_width = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.{yml,yaml}]
max_line_length = off
indent_size = 2

[COMMIT_EDITMSG]
max_line_length = off
